@import 'nib'

@keyframes pulse
	0%
		box-shadow: 0px 0px 50px 1px rgba(orangered, 0.25)
		
	50%
		box-shadow: 0px 0px 50px 1px rgba(orangered, 0.45)
		
	100%
		box-shadow: 0px 0px 50px 1px rgba(orangered, 0.25)

#home
	absolute: top left
	width: 100%
	height: 100%
	text-align: center
	
	#scene
		absolute: top 50% left 50%
		transform: translate(-50%,-50%)

	.player
		position: absolute
		width: 50px
		height: 50px
		border-radius: 999px
		background: white
		transform: translate(-50%,-50%)
		transition: width 0.25s, height 0.25s
		animation: pulse 2s infinite ease-in-out
		
		.name
			absolute: top -30px left 50%
			transform: translateX(-50%)
			color: white
			
		.direction
			absolute: top left
			width: 100%
			height: 100%
			border-radius: 999px
			transform: rotate(90deg)
			
			&:after
				content: ''
				absolute: top -5px left 50%
				transform: translateX(-50%)
				display: block
				width: 5px
				height: 10px
				background: white
				
		.health
			absolute: top 50% left 50%
			transform: translate(-50%,-50%)
				
		.stats
			absolute: bottom -50px left 50%
			transform: translateX(-50%)
			color: white
			text-align: center
			font-size: 10px
			letter-spacing: 2px
			
			.lookAngle
				margin-bottom: 10px
				
	.bullet
		position: absolute
		width: 4px
		height: 4px
		border-radius: 999px
		transform: translate(-50%,-50%)
		background: white
		z-index: -1
			
	form.username
		width: 300px
		absolute: top 50% left 50%
		transform: translate(-50%, -50%)
		
		h1
			font-size: 30px
			margin-bottom: 10px
			text-transform: uppercase
		
		span
			display    : block
			line-height: 22px
		
		.enter-name
			margin-bottom: 30px
			color: white
			
		.name-criteria
			span
				margin-bottom: 10px
			
		input
			display: block
			margin: 0 auto 40px auto
			height: 60px
			width: 100%
			outline: none
			background-color: rgba( 255,255,255,0.1 )
			color: white
			font-size: 28px
			letter-spacing: 1px
			text-align: center
			text-transform: uppercase
			font-family: 'Oswald', sans-serif
			border: 2px solid #111
			box-shadow: inset 0px 0px 10px 0px rgba( 0,0,0,0.6 )
			text-shadow: 0px 0px 10px rgba( 0,0,0,0.5 )
			
		button
			width: 50%
			height: 50px
			border: 2px solid #222
			border-radius: 10px
			background: linear-gradient( top, #333, #111 )
			color: white
			font-family: 'Oswald', sans-serif
			font-size: 18px
			box-shadow: 0px 0px 20px 0px rgba( 0,0,0,0.6 )
			letter-spacing: 2px
			transition: opacity 0.5s ease-out
			animation: pulse 3s infinite ease-in-out
			outline: none
			
			&.disabled
				opacity: 0.3
				animation: none